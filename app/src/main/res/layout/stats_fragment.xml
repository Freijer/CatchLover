<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/allLists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:textColor="@color/black">


            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3 Буквы   "
                android:textSize="11sp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/text_3_inner"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/text_3"
                android:gravity="center"
                android:text=""
                android:textSize="11sp" />


                    <TextView
                        android:id="@+id/text_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="4 Буквы   "
                        android:textSize="11sp"
                        android:layout_below="@id/text_3"/>
                    <TextView
                        android:id="@+id/text_4_inner"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textSize="11sp"
                        android:layout_below="@id/text_3_inner"
                        android:layout_toEndOf="@id/text_4"/>
                        <TextView
                            android:id="@+id/text_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="5 Буквы  "
                            android:textSize="11sp"
                            android:layout_below="@id/text_4"/>
