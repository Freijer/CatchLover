                                                                    <TextView
                                                                        android:id="@+id/text_sum"
                                                                        android:layout_width="wrap_content"
                                                                        android:layout_height="wrap_content"
                                                                        android:gravity="center"
                                                                        android:text="Всего слов  "
                                                                        android:textSize="11sp"
                                                                        android:layout_below="@id/text_14_inner"/>

                                                                    <TextView
                                                                        android:id="@+id/text_sum_inner"
                                                                        android:layout_width="50dp"
                                                                        android:layout_height="wrap_content"
                                                                        android:gravity="center"
                                                                        android:text=""
                                                                        android:textSize="11sp"
                                                                        android:layout_below="@id/text_14_inner"
                                                                        android:layout_toEndOf="@id/text_sum"/>

    </RelativeLayout>

        <RelativeLayout
         android:id="@+id/timerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/time_layout"
        android:layout_toRightOf="@+id/allLists">

        <EditText
            android:text="статистика  чего-то там работа с тмаймером"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_2"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allLists"
        android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/text_plus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/back_3"
                android:textColor="@color/black"
                android:textSize="10sp"/>
            <TextView
            android:id="@+id/text_minus"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_margin="10dp"
            android:background="@color/back_1"
            android:textColor="@color/black"
            android:layout_below="@+id/text_plus"
            android:textSize="10sp"/>


    </RelativeLayout>


    <ListView
        android:id="@+id/taskDoneList"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/time_layout"
        android:layout_above="@+id/butClose" />

    <Button
        android:id="@+id/butClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:onClick="Close"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:text="Закрыть" />

</RelativeLayout>