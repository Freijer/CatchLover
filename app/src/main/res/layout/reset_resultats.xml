<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSpeed">

    <Button
        android:id="@+id/reset_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/Reset_no"
        android:background="@drawable/forlessbutton" />

    <Button
        android:id="@+id/reset_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reset_no"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/Reset_yes"
        android:background="@drawable/resetbutton"/>



</RelativeLayout>