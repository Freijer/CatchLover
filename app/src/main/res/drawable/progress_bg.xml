<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:id="@+id/my_progress_background">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#C259EF"
                    android:centerColor="#C259EF"
                    android:centerY="0.75"
                    android:endColor="#C259EF"
                    android:angle="270"
                    />
            </shape>
        </item>

        <item android:id="@+id/my_secondaryProgress">
            <clip>
                <shape>
                    <corners android:radius="5dip" />

                </shape>
            </clip>
        </item>

        <item android:id="@+id/my_progress">
            <clip>
                <shape>
                    <corners android:radius="5dip" />
                    <gradient
                        android:startColor="#7D37E108"
                        android:centerColor="#7D37E108"
                        android:centerY="0.75"
                        android:endColor="#7D37E108"
                        android:angle="270"
                        />
                </shape>
            </clip>
        </item>

</layer-list>